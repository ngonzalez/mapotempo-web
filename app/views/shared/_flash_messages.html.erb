
<script type="text/javascript">
  $(document).on('page:change', function() {
    hideNotices();
    <% flash.each do |k, v| %>
      <% if k == 'notice' %>
        notice(<%= v.to_json.html_safe %>);
      <% elsif ['alert', 'error'].include?(k) %>
        stickyError(<%= v.to_json.html_safe %>);
      <% end %>
    <% end %>
  });
</script>
